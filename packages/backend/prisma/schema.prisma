// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/dev.db"
}

model User {
  id             String  @id @unique @default(cuid())
  email          String  @unique
  name           String
  password_hash  String 

  @@map("users")
}

model Event {
  id            String @id @unique @default(cuid())
  date          DateTime
  startedAt     DateTime
  finalizedAd   DateTime
  userId        String 

  @@map("events")
}