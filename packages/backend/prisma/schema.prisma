// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/dev.db"
}

model User {
  id            String  @id @unique @default(cuid())
  email         String  @unique
  name          String
  password_hash String
  Event         Event[]

  @@map("users")
}

model Event {
  id          String   @id @unique @default(cuid())
  name        String
  date        DateTime
  startedAt   DateTime
  finalizedAd DateTime
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  description String

  @@map("events")
}
